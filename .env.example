# Green SME Compliance Co-Pilot - Environment Configuration
# Copy this to .env and fill in your actual values

# Database
DB_PATH=db.sqlite

# Storage
MINIO_URL=http://localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=compliance-docs

# External APIs
OPENWEATHER_API_KEY=your_openweather_api_key_here

# AI Models
MISTRAL_API_KEY=your_mistral_api_key_here_optional

# n8n Integration
N8N_WEBHOOK_URL=http://localhost:5678/webhook/compliance-email

# Application
APP_ENV=development
APP_PORT=8000
LOG_LEVEL=INFO

# Email Configuration (for n8n)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
